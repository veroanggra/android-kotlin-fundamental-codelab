<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_16"
        android:fontFamily="@font/roboto"
        android:text="@string/name"
        android:textSize="@dimen/_20f" />

    <ImageView
        android:id="@+id/iv_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_16"
        android:contentDescription="@string/start_image"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <ScrollView
        android:id="@+id/sc_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_32"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_welcoming"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16"
                android:layout_marginEnd="@dimen/_16"
                android:lineSpacingMultiplier="1.5"
                android:text="@string/hi_my_name_vero"
                android:textSize="@dimen/_20f" />

            <ImageView
                android:id="@+id/iv_unlike_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16"
                android:contentDescription="@string/unlike_star"
                app:srcCompat="@android:drawable/presence_video_busy" />

            <TextView
                android:id="@+id/tv_desc"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16"
                android:layout_marginTop="@dimen/_16"
                android:layout_marginEnd="@dimen/_16"
                android:lineSpacingMultiplier="1.5"
                android:text="@string/lorem_ipsum" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>