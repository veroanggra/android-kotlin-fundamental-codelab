<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_won"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundWon"
        tools:context=".GameWonFragment">


        <ImageView
            android:id="@+id/iv_won"
            android:layout_width="@dimen/_0"
            android:layout_height="@dimen/_192"
            android:layout_marginStart="@dimen/_16"
            android:layout_marginTop="164dp"
            android:layout_marginEnd="@dimen/_16"
            android:contentDescription="@string/won_image"
            android:src="@drawable/you_win"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_next_match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="84dp"
            android:text="@string/next_match"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="@+id/iv_won"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="@+id/iv_won"
            app:layout_constraintTop_toBottomOf="@+id/iv_won" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
